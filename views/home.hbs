{{#if removedUser}}
<div class="alert alert-info alert-dismissible fade show" role="alert">
   The Appointment Has Been Deleted Successfully.
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<div class="row">
  <div class="col-6"><h1>Appointments..</h1></div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/adduser" type="button" class="btn btn-primary align-self-center">Book Appointment</a>
  </div>
</div>


<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th style="background-color: yellow;" scope="col">Id</th>
      <th style="background-color: yellow;" scope="col">First Name</th>
      <th style="background-color: yellow;" scope="col">Last Name</th>
      <th style="background-color: yellow;" scope="col">Email</th>
      <th style="background-color: yellow;" scope="col">Phone</th>
      <th style="background-color: yellow;" scope="col" class="text-center">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.first_name}}</td>
      <td>{{this.last_name}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      <td class="text-center">

        <a href="/viewuser/{{this.id}}" type="button" class="btn btn-success btn-small"><i class="bi bi-eye"></i> View</a>
        <a href="/edituser/{{this.id}}" type="button" class="btn btn-primary btn-small"><i class="bi bi-pencil"></i> Edit</a>
        <a href="{{this.id}}" type="button" class="btn btn-danger btn-small"><i class="bi bi-person-x"></i> Delete</a>

      </td>
    </tr>
    {{/each}}
  </tbody>
</table>